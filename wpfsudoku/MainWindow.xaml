        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfsudoku"
        xmlns:vr="clr-namespace:wpfsudoku.ValidationRules"
        mc:Ignorable="d" Title="wpfsudoku" Height="374" Width="800" Icon="sudoku.ico"
        ResizeMode="CanMinimize">
    <Grid>
        <DataGrid x:Name="dgBoard" HorizontalAlignment="Left" Width="325" Height="315"
                  Margin="10,10,0,0" VerticalAlignment="Top"  HeadersVisibility="None"
                  FontSize="24" VerticalScrollBarVisibility="Disabled" ItemsSource="{Binding}"
